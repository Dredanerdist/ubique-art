      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Adminstatus verwalten</a>
        <%= render user %>
      </td> 
			<% end %>
			<% if can? :manage, user then%>
      	<td><%= link_to("Nutzer lÃ¶schen", user_path(user), :data => { :confirm => "Sicher?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
			<% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
