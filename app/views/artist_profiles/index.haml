.row
  .large-12.columns
    %h1 Teilnehmende Künstler
    = link_to 'Ich bin Künstler!', new_artist_profile_path
    %table.large-12
      %tr
        %th Name
        %th
      - @artist_profiles.each do |artist_profile|
        %tr
          %td= link_to artist_profile.user.name, artist_profile
        - if can? :delete,  artist_profile then
          %td= link_to 'Löschen', artist_profile, method: :delete, data: { confirm: 'Sicher?' }